// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Pokemon {
  id Int @unique
  name String @unique
  generation Int 
  //types String[]
  weight Float
  height Float
}

model Move {
  name String @unique
  generation Int
  power Int
  type Int
  class String 
  pp Int
}

model Daily {
  date DateTime @unique
  classic Pokemon
  move Move
  whosThatPokemon Pokemon

}